@page "/Register"
@model dotnet.Pages.registerModel
@{
}

<div>
    <h1>
        Register page
    </h1>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label" asp-for="reg.Name" >Name</label>
        <input class="form-control" asp-for="reg.Name" />
        <span asp-validation-for="reg.Name" class="bg-danger text-light "></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="reg.Email">Email</label>
        <input class="form-control" asp-for="reg.Email" />
        <span asp-validation-for="reg.Email" class="bg-danger text-light "></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="reg.Password">Password</label>
        <input class="form-control" asp-for="reg.Password"/>
        <span asp-validation-for="reg.Password" class="bg-danger text-light "></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="reg.Age">Age</label>
        <input class="form-control" asp-for="reg.Age" />
        <span asp-validation-for="reg.Age" class="bg-danger text-light "></span>
        
    </div>

    <div class="form-group">
        <label asp-for="reg.SelectedGender" class="control-label">Gender</label>
        <select asp-for="reg.SelectedGender" asp-items="Model.reg.Gender">
            <option value="">Select the Gender</option>
        </select>
        <span asp-validation-for="reg.SelectedGender" class="bg-danger text-light "></span> 
        </div>
        <div class="form-group">
            <input type="file" asp-for="reg.Image" />
        </div>

    <input type="submit" class="btn btn-primary mt-3" />


</form>