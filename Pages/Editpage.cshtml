@page
@model dotnet.Pages.EditpageModel
@{
}
<div>
    <h4> Edit user</h4>
</div>


<form method="post" asp-page-handler="Submit" >
    <div class="form-group">
        <input type="hidden" asp-for="Customer.Id" />
        <label class="control-label" asp-for="@Model.Customer.Name" >Name</label>
        <input class="form-control" asp-for="@Model.Customer.Name" />
        <span asp-validation-for="@Model.Customer.Name" class="bg-danger text-light "></span>

    </div>
    <div class="form-group">
        <label class="control-label" asp-for="@Model.Customer.Email">Email</label>
        <input class="form-control" asp-for="@Model.Customer.Email" />
        <span asp-validation-for="@Model.Customer.Email" class="bg-danger text-light "></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="@Model.Customer.Password">Password</label>
        <input class="form-control" asp-for="@Model.Customer.Password" />
        <span asp-validation-for="@Model.Customer.Password" class="bg-danger text-light "></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="@Model.Customer.Age">Age</label>
        <input class="form-control" asp-for="@Model.Customer.Age" />
        <span asp-validation-for="@Model.Customer.Age" class="bg-danger text-light "></span>
        
    </div>

    <input type="submit" class="btn-primary" value="Submit" />
</form>